<packet ePacketType = "PAKCS_CRAFT_ENHANCE_REQ">
	<element name = "enhancement" type = "CraftEnhancementType" />
	<element name = "data" type = "CraftEnhancementData" />

	<simpleType name = "CraftEnhancementType">
		<restriction base = "uint8_t">
			<enumeration value = "GEM" />
			<enumeration value = "DISASSEMBLE_SKILL" />
			<enumeration value = "DISASSEMBLE_NPC" />
			<enumeration value = "UPGRADE_SKILL" />
			<enumeration value = "UPGRADE_NPC" />
		</restriction>
	</simpleType>


	<complexType name = "CraftEnhancementData">
		<choice>
			<sequence inline = "true">
				<element name = "gem_target" type = "uint8_t" />
				<element name = "gem_source" type = "uint8_t" />
			</sequence>
			<sequence inline = "true">
				<element name = "disassemble_source" type = "uint8_t" />
				<element name = "disassemble_target" type = "uint8_t" />
			</sequence>
			<sequence inline = "true">
				<element name = "upgrade_source" type = "uint8_t" />
				<element name = "upgrade_target" type = "uint8_t" />
			</sequence>
			<element name = "data" type = "uint16_t" />
		</choice>
	</complexType>
</packet>