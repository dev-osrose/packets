<complexType name = "ItemHeader">
    <sequence>
        <element name = "type" type = "u8" />
        <element name = "id" type = "u16" />
        <element name = "isCreated" type = "bool" />
    </sequence>
</complexType>

<complexType name = "InfoItemData">
    <sequence>
        <element name = "gem_opt" type = "u16" />
        <element name = "durability" type = "u8" />
        <element name = "life" type = "u16" />
        <element name = "hasSocket" type = "bool" />
        <element name = "isAppraised" type = "bool" />
        <element name = "refine" type = "u8" />
    <sequence>
</complexType>

<complexType name = "ItemData">
    <choice>
        <element name = "info" type = "InfoItemData" />
        <element name = "count" type = "u32" />
    </choice>
</complexType>

<complexType name = "Item">
    <sequence>
        <element name = "header" type = "ItemHeader" />
        <element name = "data" type = "ItemData" />
    </sequence>
</complexType>
