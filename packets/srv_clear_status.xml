<packet ePacketType = "PAKWC_CLEAR_STATUS">
    <element name = "target" type = "uint16_t" />
    
    <!-- Status flags to clear, FLAG_ING_* in client -->
    <element name = "status" type = "uint32_t" />

    <!-- Set HP if flag FLAG_ING_HP (0x00000001) is set -->
    <element name = "hp" type = "int16_t" />

    <!-- Set MP if flag FLAG_ING_MP (0x00000002) is set -->
    <element name = "mp" type = "int16_t" />
</packet>