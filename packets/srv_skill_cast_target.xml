<packet ePacketType = "PAKWC_SKILL_CAST_TARGET">
    <includeXml path = "mob_animation.xml" />

    <element name = "source" type = "uint16_t" />
    <element name = "target" type = "uint16_t" />
    <element name = "id" type = "int8_t" />

    <element name = "distance" type = "uint16_t" />
    <element name = "x" type = "float" />
    <element name = "y" type = "float" />

    <!-- If `source` points to a MOB then this is the NPC animation id -->
    <element name = "animation" type = "MobAnimation" default = "MobAnimation::STOP" />
</packet>

